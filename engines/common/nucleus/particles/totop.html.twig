{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
<div class="{{ particle.css.class|e }} g-particle">
    <div class="g-totop">
        <a href="#" id="g-totop" rel="nofollow">
            {% if particle.icon %}<i class="{{particle.icon}}"></i>{% else %}{{ particle.content|default('To Top')|raw }}{% endif %}
        </a>
    </div>
</div>
{% endblock %}
