{% extends 'forms/fields/select/selectize.html.twig' %}

{% set outline = field.outline ?: nested(data, scope ~ field.outline_field) %}
{% set list = outline ? gantry.configurations.getParticleInstances(outline, field.particle, false) %}

{% block options %}
    {{ parent() }}
    {% for name, title in list %}
        <option value="{{ name }}"{% if name == value %} selected="selected"{% endif %}>
            {{ title }}
        </option>
    {% endfor %}
{% endblock %}