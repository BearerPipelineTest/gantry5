{% extends 'forms/' ~ layout|default('field') ~ '.html.twig' %}

{% block input %}
    {% for key, text in field.options %}
        {% set childName = name|fieldName %}
        {% set key = (field.use == 'keys' ? '1' : key) %}
        <span class="radios">
            <input type="radio"
                   id="{{ childName ~ '-' ~ key|lower|e }}"
                   value="{{ key|e }}"
                   name="{{ (scope ~ childName)|fieldName|e }}"
                   {% if value == key %}checked="checked"{% endif %}
                    {% if field.validate.required %}required="required"{% endif %}
            >
            <label for="{{ childName ~ '-' ~ key|lower|e }}">{{ text|e }}</label>
        </span>
    {% endfor %}
{% endblock %}
