    "require": {
        "php": ">=7.1.3",
        "scssphp/scssphp": "~1.0"
    },
    "require-dev": {
        "symfony/event-dispatcher": "~3.4",
        "symfony/yaml": "~3.4",
        "twig/twig": "~1.42",
        "pimple/pimple": "~3.2",
        "filp/whoops": "~2.3",
        "rockettheme/toolbox": "~1.4",
        "erusev/parsedown-extra": "~0.7",
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
